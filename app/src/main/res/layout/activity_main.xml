<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/studentNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student Name"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/mathScoreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mathematics Score"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/scienceScoreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Science Score"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/englishScoreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="English Score"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result will appear here"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="16dp" />
</LinearLayout>